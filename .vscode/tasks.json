{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "label": "cargo build",
      "command": "cargo",
      "args": ["build"],
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "cargo",
      "label": "cargo run",
      "command": "cargo",
      "args": ["run"],
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "cargo",
      "label": "cargo clean",
      "command": "cargo",
      "args": ["clean"],
      "problemMatcher": []
    },
    {
      "type": "cargo",
      "label": "cargo bench",
      "command": "cargo",
      "args": ["+nightly", "bench"],
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "cargo",
      "label": "cargo check",
      "command": "cargo",
      "args": ["check"],
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "cargo",
      "label": "cargo test",
      "command": "cargo",
      "args": ["test"],
      "problemMatcher": ["$rustc"]
    }
  ]
}
